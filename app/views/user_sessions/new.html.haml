- form_for @user_session, :url => user_session_path do |f|
  %br= f.error_messages
  %p 
    = f.label :login
    %br 
    = f.text_field :login
  %p 
    = f.label :password
    %br
    = f.password_field :password
  %p 
    = f.check_box :remember_me 
    = "&nbsp;" 
    = f.label :remember_me
  %p
    = f.submit "Login"
